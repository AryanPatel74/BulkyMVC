@page
@model BulkyRazorProject.Pages.Categories.CreateModel
<div class="pb-2">
    <a asp-page="/categories/index" class="btn btn-primary"><i class="bi bi-skip-backward-circle"></i> Back Button</a>
</div>
<form method="post">
    <fieldset>
        <legend>Add Category</legend>
        <div class="mb-3">
            <label asp-for="categories.Name" class="form-label"></label>
            <input asp-for="categories.Name" type="text" id="disabledTextInput" class="form-control" placeholder="input name">
            <span asp-validation-for="categories.Name" class="text-bg-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="categories.DisplayOrder" class="form-label"></label>
            <input asp-for="categories.DisplayOrder" type="text" id="disabledTextInput" class="form-control" placeholder="input quantity">
            <span asp-validation-for="categories.DisplayOrder" class="text-bg-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create Category</button>
    </fieldset>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}